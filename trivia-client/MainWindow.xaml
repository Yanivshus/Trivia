<Window x:Class="trivia_client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:trivia_client"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Margin="2,0,-2,0">
        <Image Height="82" Width="292" Source="/Trivia.png"/>
        <Grid Height="89" Width="700">
            <Label Content="Username:" HorizontalAlignment="Left" VerticalAlignment="Top" Width="83" Margin="38,13,0,0" FontFamily="Broadway"/>
            <Label Content="Password:" HorizontalAlignment="Left" Margin="38,39,0,0" VerticalAlignment="Top" FontFamily="Broadway" Width="92"/>
            <TextBox HorizontalAlignment="Left" Margin="147,16,0,0" TextWrapping="Wrap" Text="user" x:Name="UsernameBox" VerticalAlignment="Top" Width="453" FontFamily="Broadway"/>
            <TextBox HorizontalAlignment="Left" Margin="147,43,0,0" TextWrapping="Wrap" Text="user123" x:Name="PasswordBox" VerticalAlignment="Top" Width="453" FontFamily="Broadway"/>
            <Button Content="sign-in" HorizontalAlignment="Left" Margin="631,0,0,0" VerticalAlignment="Center" Height="41" Width="59" Click="loginToServer" FontFamily="Broadway">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black"/>
                        <GradientStop Color="White" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
                <UIElement.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </UIElement.RenderTransform>
            </Button>
            <TextBlock HorizontalAlignment="Left" Margin="171,67,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="17" Width="367" x:Name="errorBox">
             <UIElement.RenderTransform>
                 <TransformGroup>
                     <ScaleTransform/>
                     <SkewTransform/>
                     <RotateTransform/>
                     <TranslateTransform/>
                 </TransformGroup>
             </UIElement.RenderTransform>
            </TextBlock>
        </Grid>
    </StackPanel>
</Window>
